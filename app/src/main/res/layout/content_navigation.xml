<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pinknblue.NavigationActivity"
    tools:showIn="@layout/activity_navigation">

    <FrameLayout
        android:id="@+id/nav_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="2dp"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/gradient_top"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F9F9F9"
            android:weightSum="5">

        <LinearLayout
            android:id="@+id/layout_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessLeaf"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|center_vertical"
                android:src="@mipmap/unselect_home"/>

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#C3C1C2"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_routs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessLeaf"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_routs"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|center_vertical"
                android:src="@mipmap/unselect_routs"/>

            <TextView
                android:id="@+id/txt_routs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Routes"
                android:textColor="#C3C1C2"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_hotspot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessLeaf"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_hotspot"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|center_vertical"
                android:src="@mipmap/unselect_hotpost"/>

            <TextView
                android:id="@+id/txt_hotspot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotspots"
                android:textColor="#C3C1C2"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_unlock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_unlock"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|center_vertical"
                android:src="@mipmap/unselect_unlock"/>

            <TextView
                android:id="@+id/txt_unlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unlock Features"
                android:textColor="#C3C1C2"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessLeaf"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|center_vertical"
                android:src="@mipmap/unselect_more"/>

            <TextView
                android:id="@+id/txt_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More"
                android:textColor="#C3C1C2"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
