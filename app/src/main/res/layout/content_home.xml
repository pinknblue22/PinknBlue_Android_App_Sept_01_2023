<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E4058"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pinknblue.HomeActivity"
    tools:showIn="@layout/activity_home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layout_one"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/white">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_login_logo"
                    android:layout_marginTop="10dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_one">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/yellow_line"
                    android:layout_centerInParent="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_hotspot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/hotspots"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="right"/>

                    <ImageButton
                        android:id="@+id/btn_routs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/routes"
                        android:layout_marginLeft="28dp"
                        android:layout_gravity="left"/>
                    <ImageButton
                        android:id="@+id/btn_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/more"
                        android:layout_marginRight="18dp"
                        android:layout_gravity="right"/>
                    <ImageButton
                        android:id="@+id/btn_unlock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/unlock"
                        android:layout_gravity="left"/>

                </LinearLayout>


            </RelativeLayout>
    </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>
